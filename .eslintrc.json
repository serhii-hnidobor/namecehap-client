{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "xo",
        "xo-typescript"
    ],
    "overrides": [
        {
            "files": ["*.ts"],
            "rules": {}
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "@typescript-eslint/indent": "off",
        "@typescript-eslint/naming-convention": "off",
        "no-mixed-spaces-and-tabs": "off",
        "no-bitwise": "off"
    }
}
